<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.beachtest.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.beachtest.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_forgotPasswordEmailFragment"
            app:destination="@id/forgotPasswordEmailFragment" />
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordEmailFragment"
        android:name="com.example.beachtest.ForgotPasswordEmailFragment"
        android:label="fragment_forgot_password_email"
        tools:layout="@layout/fragment_forgot_password_email" >
        <action
            android:id="@+id/action_forgotPasswordEmailFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.beachtest.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_dietaryPreferenceFragment"
            app:destination="@id/dietaryPreferenceFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/dietaryPreferenceFragment"
        android:name="com.example.beachtest.DietaryPreferenceFragment"
        android:label="fragment_dietary_preference"
        tools:layout="@layout/fragment_dietary_preference" >
        <action
            android:id="@+id/action_dietaryPreferenceFragment_to_allergyFragment"
            app:destination="@id/allergyFragment" />
    </fragment>
    <fragment
        android:id="@+id/allergyFragment"
        android:name="com.example.beachtest.AllergyFragment"
        android:label="fragment_allergy"
        tools:layout="@layout/fragment_allergy" >
        <action
            android:id="@+id/action_allergyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_allergyFragment_to_dietaryPreferenceFragment"
            app:destination="@id/dietaryPreferenceFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.beachtest.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" >
        <action
            android:id="@+id/action_resetPasswordFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.beachtest.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_weekDayFragment"
            app:destination="@id/weekDayFragment">
            <argument
                android:name="diningHall"
                app:argType="string"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/weekDayFragment"
        android:name="com.example.beachtest.WeekDayFragment"
        android:label="fragment_weekday"
        tools:layout="@layout/fragment_week_day">
        <argument
            android:name="diningHall"
            app:argType="string"/>
        <action
            android:id="@+id/action_weekDayFragment_to_mealTimeFragment"
            app:destination="@id/mealTimeFragment">
            <argument
                android:name="day"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/mealTimeFragment"
        android:name="com.example.beachtest.MealTimeFragment"
        android:label="fragment_meal_time"
        tools:layout="@layout/fragment_meal_time">
        <argument
            android:name="diningHall"
            app:argType="string"/>
        <argument
            android:name="day"
            app:argType="string"/>
        <action
            android:id="@+id/action_mealTimeFragment_to_menuItemsFragment"
            app:destination="@id/menuItemsFragment">
            <argument
                android:name="diningHall"
                app:argType="string"/>
            <argument
                android:name="day"
                app:argType="string"/>
            <argument
                android:name="mealTime"
                app:argType="string"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/menuItemsFragment"
        android:name="com.example.beachtest.MenuItemsFragment"
        android:label="fragment_menu_items"
        tools:layout="@layout/fragment_menu_items">
        <argument
            android:name="diningHall"
            app:argType="string" />
        <argument
            android:name="day"
            app:argType="string" />
        <argument
            android:name="mealTime"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/hallHoursFragment"
        android:name="com.example.beachtest.HallHoursFragment"
        android:label="fragment_menu_items"
        tools:layout="@layout/fragment_hall_hours">
    </fragment>

    <fragment
        android:id="@+id/pricesFragment"
        android:name="com.example.beachtest.PricesFragment"
        android:label="fragment_prices_items"
        tools:layout="@layout/fragment_prices">

    </fragment>

</navigation>