<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewBanner"
                android:layout_width="410dp"
                android:layout_height="240dp"
                android:src="@drawable/img" />

            <TextView
                android:id="@+id/buttonProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Profile"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableStart="@drawable/profileicon"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"/>

            <TextView
                android:id="@+id/buttonPrices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Prices"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableStart="@drawable/profileicon"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"/>

            <TextView
                android:id="@+id/buttonHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Dining Hall Hours"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableStart="@drawable/profileicon"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"/>

            <TextView
                android:id="@+id/buttonLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Location"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableStart="@drawable/locationicon"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"/>

            <TextView
                android:id="@+id/buttonLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Language"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableStart="@drawable/profileicon"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"/>

            <TextView
                android:id="@+id/buttonCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Calendar"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableStart="@drawable/profileicon"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"/>

            <TextView
                android:id="@+id/buttonPhotographyTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Photography Tips"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableStart="@drawable/profileicon"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"/>

            <TextView
                android:id="@+id/buttonVirtualTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Virtual Tour"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableStart="@drawable/profileicon"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"/>

            <TextView
                android:id="@+id/buttonRecources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Recources"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableStart="@drawable/profileicon"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"/>

            <TextView
                android:id="@+id/buttonEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Events"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableStart="@drawable/profileicon"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"
                android:layout_marginBottom="90dp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>