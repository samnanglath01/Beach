<?xml version="1.0" encoding="utf-8"?>
<!--
Code written by Sebastian Tadeo

This file defines the layout of a screen in an Android app that allows users to schedule meals. The layout is organized vertically in a scrollable view, meaning you can scroll up and down if the content is taller than the screen.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleMealsFragment">

    <!-- A ScrollView allows the content to scroll vertically if it extends past the bottom of the screen. -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- LinearLayout organizes its child views (components) vertically or horizontally. Here, it's vertical. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- An ImageView displays an image. In this case, it's used for a banner at the top of the screen. -->
            <ImageView
                android:id="@+id/topbannerProfile"
                android:layout_width="410dp"
                android:layout_height="110dp"
                android:src="@drawable/topbanner" />

            <!-- A TextView displays text. Here, it's used as a title or button with bold text indicating "Schedule Meal". -->
            <TextView
                android:id="@+id/buttonScheduleMeal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/timeicon"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:text="  Schedule Meal"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/virtualTourInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Welcome to Meal Scheduling! Easily plan your meals with preferred dates and times, choose meal types, and set reminders. Enjoy personalized dining experiences tailored by our talented chefs, all with just a few taps."
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealDescriptionPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="5dp"
                android:text="Please enter the meal description or any special notes below: "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- An EditText allows users to enter and edit text. Here, it's used for entering meal descriptions. -->
            <EditText
                android:id="@+id/mealDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="top"
                android:hint="Type here.."
                android:inputType="textMultiLine"
                android:minHeight="100dp" />


            <TextView
                android:id="@+id/MealTypeSpinnerPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="5dp"
                android:text="Select the meal type below:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- A Spinner provides a dropdown menu to select from various options, in this case, meal types. -->
            <Spinner
                android:id="@+id/mealTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:entries="@array/meal_types"
                android:minHeight="48dp" />

            <!-- A button is used here to trigger actions like opening a date picker dialog. -->
            <Button
                android:id="@+id/datePickerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/yellow"
                android:text="Pick Date" />

            <!-- TextView for displaying the selected date -->
            <TextView
                android:id="@+id/selectedDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center_horizontal"
                android:text="No date selected"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- A button is used here to trigger actions like opening a time picker dialog. -->
            <Button
                android:id="@+id/timePickerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/yellow"
                android:text="Pick Time" />

            <!-- TextView for displaying the selected time -->
            <TextView
                android:id="@+id/selectedTimeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center_horizontal"
                android:text="No time selected"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- A Switch allows users to toggle between two states: on and off. Here, it's used to enable or disable notifications. -->
            <Switch
                android:id="@+id/notificationToggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Enable Notification"
                android:thumbTint="@color/switch_thumb_selector"
                android:trackTint="@color/colorPrimary" />

            <!-- More buttons for scheduling a meal and navigating back to a previous screen. -->
            <Button
                android:id="@+id/scheduleMealButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/yellow"
                android:text="Schedule Meal"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/backHomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/yellow"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingStart="18dp"
                android:paddingTop="12dp"
                android:paddingEnd="18dp"
                android:paddingBottom="12dp"
                android:text="Back to Options"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>