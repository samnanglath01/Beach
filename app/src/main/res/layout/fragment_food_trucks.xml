<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose between Food Truck Vendors or Famers Market Vendors below:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/foodTrucksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Trucks"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/farmersMarketButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmers Market Vendors"
        android:layout_marginTop="16dp"/>

    <!-- Placeholder for dynamic vendor display -->
    <!-- You can use a RecyclerView here or a custom layout that will be shown/hidden based on the button clicked -->

</LinearLayout>
