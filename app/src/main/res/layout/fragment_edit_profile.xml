<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileFragment">
    <!-- Root FrameLayout: provides a base layer for the fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Nested FrameLayout: used for structuring the UI elements within the fragment -->

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/beachbackground" />
        <!-- Background ImageView: sets a beach scene as the background for a visually appealing look -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A0000000"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">
            <!-- Semi-transparent LinearLayout container: centralizes the form elements and ensures they are readable over the background image -->

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:hint="Edit Email ....."
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="12dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false" />
            <!-- Email EditText: allows users to edit their email address -->

            <EditText
                android:id="@+id/usernameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Edit Username ....."
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false" />
            <!-- Username EditText: permits users to edit their username -->

            <Button
                android:id="@+id/SaveeditButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/yellow"
                android:text="Save Edit" />
            <!-- Save Edit Button: submits the form to save the edited user information -->

            <Button
                android:id="@+id/backToProfileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/yellow"
                android:text="Back to Profile" />
            <!-- Back to Profile Button: allows the user to return to their profile without making changes -->

        </LinearLayout>
    </FrameLayout>
</FrameLayout>
