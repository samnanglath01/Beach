<?xml version="1.0" encoding="utf-8"?>
<!-- meal_list_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/rounded_border">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewMealDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Description"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/textViewMealType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Type" />

        <TextView
            android:id="@+id/textViewMealTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Time" />

        <TextView
            android:id="@+id/textViewMealDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Date" />


    </LinearLayout>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:backgroundTint="@color/yellow"/>
</LinearLayout>
