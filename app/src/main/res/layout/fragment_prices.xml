<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PricesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/topbannerProfile"
                android:layout_width="410dp"
                android:layout_height="110dp"
                android:src="@drawable/topbanner"/>

            <TextView
                android:id="@+id/buttonPrices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Prices"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:drawableStart="@drawable/priceicon"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breakfast $10.30\nLunch $12.50\nDinner $14.30"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="33dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/MealRateInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guests may enter the residential dining areas by paying the guest meal rates."
                android:textColor="@color/black"
                android:textSize="22dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="25dp"/>

            <TextView
                android:id="@+id/CommuterMealPlanTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Commuter Meal Plan"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="25dp"/>

            <TextView
                android:id="@+id/CommuterMealPlanInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We are pleased to offer a meal plan for commuter students, faculty, or staff who wish to eat in the Residential Dining Halls.\n\nThe Commuter Meal Plan allows the student, faculty, or staff to have any 40 meals of their choice effective the next business day following the receipt of full payment. The meal plan may be used anytime during the year and be repurchased as desired. This option allows more flexibility for students to purchase multiple meals within a meal period.\n\nFor the 2023-24 academic year, each Commuter Meal Plan can be purchased for $385 effective July 1, 2023."
                android:textColor="@color/black"
                android:textSize="22dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="25dp"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
