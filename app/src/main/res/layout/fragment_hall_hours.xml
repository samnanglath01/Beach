<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HallHoursFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/topbannerProfile"
                android:layout_width="410dp"
                android:layout_height="110dp"
                android:src="@drawable/topbanner"/>

            <TextView
                android:id="@+id/buttonPrices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Dining Hall Hours"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:drawableStart="@drawable/timeicon"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/BeachsideTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beachside"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="38dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/BeachsideHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday - Friday 6:30 am - 8:30 pm\nSaturday 11 am - 7:30 pm\nSunday 11 am - 7:30 pm"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="25dp"/>

            <TextView
                android:id="@+id/HillsideTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hillside"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="38dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/HillsideHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday - Friday 7 am - 8:30 pm\nSaturday 9:30 am - 7:30 pm\nSunday Closed"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="25dp"/>

            <TextView
                android:id="@+id/ParksideTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parkside"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="38dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/ParksideHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday - Friday 7 am - 8:30 pm\nSaturday Closed\nSunday 9:30 am - 7:30 pm"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="25dp"/>

            <Button
                android:id="@+id/backHomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Home Page"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="@color/yellow"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center_vertical"
                android:drawablePadding="8dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
