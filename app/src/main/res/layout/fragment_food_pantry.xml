<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodPantryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/topbannerProfile"
                android:layout_width="410dp"
                android:layout_height="110dp"
                android:src="@drawable/topbanner" />

            <TextView
                android:id="@+id/buttonFoodPantry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     Food Pantry"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableStart="@drawable/pantryicon"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laurén Chalmers '83 Beach Pantry"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/beachpantrylogo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/beachpantry"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="The Laurén Chalmers '83 Beach Pantry operates as the official food pantry for Long Beach State University (LBSU) students. "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="\nThe pantry provides food items for students in need. An initiative spanning two ASI executive administrations, 2015 ASI Vice President Miriam Hernández and 2016 ASI Vice President Logan Vournas spearheaded the food pantry project into fruition in fall 2016."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="\nAlso housed in the Laurén Chalmers '83 Beach Pantry will be the Student Swap Shop program, aimed at providing students with the opportunity to swap unneeded or old school supplies, like books, notebooks and other items essential to education."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nServices"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="The Laurén Chalmers '83 Beach Pantry is open to currently enrolled LBSU students. Stop by and pick up FREE groceries this week! For more information, read below:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="\nNo Appointments Needed!"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="\nLaurén Chalmers '83 Beach Pantry Hours:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="Monday - Friday: 10 a.m. - 2 p.m. and 5 p.m. - 7 p.m.\nSaturday: 11 a.m. - 2 p.m.\nCurbside pick up by appointment"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="\nLocation:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="The Laurén Chalmers '83 Beach Pantry is on the first floor of the University Student Union (USU), USU-116. Enter using the outside entrance to the left of the USU Games Center."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="\n*It is highly encouraged to take an assortment of items for a well-balanced meal.\n\nFor questions, please email asi-pantry@csulb.edu."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="\nCurbside Service:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="\nThe Laurén Chalmers '83 Beach Pantry offers curbside bag pickup. This service is for students who are unable to visit the pantry. Appointments are available Fridays between 2:00 - 4:00 p.m. and Saturdays between 12:00 - 1:00 p.m. Students will be able to create an online shopping cart. If you are interested in this program, please EMAIL asi-pantry@csulb.edu to receive instructions. Once you have registered, you will be able to make an appointment and shop."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"/>

        </LinearLayout>

    </ScrollView>
</FrameLayout>